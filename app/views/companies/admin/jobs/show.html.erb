<div class="text-center container-fluid">
  <div class="row">
    <h3 id="title"> <%= @job.title %> Details</h3>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4>Job Description</h4>
      <%= @job.description %>
    </div>
    <div class="col-md-6">
      <h4><%= @job.company.name %> Information</h4>
      <%= @job.company.information %>
    </div>
    <div class="row">
      <%= button_to "Add to Favorites", cart_jobs_path(job_id: @job.id), class: "btn btn-success" %>
    </div>
  </div>
</div>
