<div class="row">
  <div class="col-md-6 col-md-offset-3" id="create">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center">Register Your Company</h3>
      </div>
      <div class="panel-body">
        <%= form_for(@company, html: {class: 'form-horizontal'}) do |f| %>
          <div class="field form-group">
            <div class="col-sm-12">
              <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
            </div>
          </div>

          <div class="field form-group">
            <div class="col-sm-12">
              <%= f.text_field :information, class: 'form-control', placeholder: 'Information' %>
            </div>
          </div>
          <div class="actions form-group"> <div class="col-sm-12">
              <%= f.submit "Create Account", class: "btn btn-primary pull-right" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
