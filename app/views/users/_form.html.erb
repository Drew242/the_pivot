<%= form_for(@user, html: {class: 'form-horizontal', multipart: true }) do |f| %>
  <div class="field form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :street_address, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :street_address, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :city, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :city, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :state, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :state, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :zipcode, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :zipcode, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :email, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :password, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>
  <div class="field form-group">
    <%= f.label :resume, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10" id="resume">
      <%= f.file_field :resume, class: 'form-control' %>
    </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <%= f.submit "Update Account" %>
    </div>
  </div>
<% end %>
