<div class="container">
  <h1>Order: <%= @order.id %></h1>
  <h4>Order Status: <%= @order.status.capitalize %></h4>
  <h5>Ordered on: <%= @order.created_at.strftime("%m-%d-%Y %I:%M %p") %></h5>
  <br><br>
  <% if @order.status == "completed" || @order.status == "cancelled" %>
  <h5>Your order was <%= @order.status %> on <%= @order.updated_at.strftime("%m-%d-%Y %I:%M %p") %></h5>
  <% end %>
  <table id="CartTable">
    <th>Name</th>
    <th>Quantity</th>
    <th>Subtotal</th>
    <% @order.favorite_jobs.each do |favorite_job| %>
    <tr>
      <td><%= link_to "favorite", company_job_path(favorite_job.company, favorite_job.id) %></td>
    </tr>
    <% end %>
  </table><br><br>
</div>
